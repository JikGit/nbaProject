body{background: var(--bgColor);}

a {
	text-decoration: none;
	color: var(--fontColor);
}

img{
	filter: drop-shadow(5px 7px 16px #000);
}


/* TOPBAR */
#topBar{
	height: calc(var(--topBarHeight) * 1px); 	
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background-color: var(--bgColor);
	z-index: 2;
	border-bottom: 1px solid var(--borderTopBarColor);
}

#topBar > img{
	position: absolute;	
	display: inline-block;
	width: 105px;
	height: 60px;
	top: 50%;
	transform: translateY(-50%);
	left: 5%;
}

#topBar > #links{
	position: absolute;
	top: 70%;
	left: 50%;
	transform: translate(-50%, -50%);
	white-space: nowrap;
}

#topBar > #links > a{
	font-size: 18px;
	margin-right: 30px;
	font-weight: bold;
	text-shadow: 5px 5px 5px var(--shadowLinksColor);
}

#topBar > #links *.selected{border-bottom: 1px solid #FFFFFF}

#container{
	margin-top:  calc(var(--topBarHeight) * 1.1px);
	margin-bottom: 200px;
	color: var(--fontColor);
	width: 900px;
	position: relative;	
	left: 50%;
	transform: translateX(-50%);
}

#container > .textBlock > .descrizione{font-size: 18px;}

/* titoli */
#container > .title{
	margin-top: 20px;
	font-size: 40px;
	color: var(--titleColor);
}
#container > .textBlock h3.subTitle{color: var(--subTitleColor);}
#container > .textBlock h4.subSubTitle{color: var(--subSubTitleColor);}

#container > .textBlock img.image{
	width: 200px;
	float: right;
	margin: 20px;
}

